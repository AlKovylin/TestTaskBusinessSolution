@model List<OrderViewModel>;

<table class="table table-striped table-hover" style="cursor: pointer" id="mainTable">
    <thead class="table-primary">
        <tr>
            <th class="col-1" scope="col">№ п/п</th>
            <th scope="col">Номер</th>
            <th scope="col">Дата</th>
            <th scope="col">Поставщик</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < @Model.Count; i++)
        {
            <tr onclick="location.href='@Url.Action("Get", "Orders", new {id = @Model[i].Id})'">
                <th scope="row">@(i + 1)</th>
                <td>@Model[i].Number</td>
                <td>@Model[i].Date.ToString("d")</td>
                <td>@Model[i].ProviderName</td>
            </tr>
        }
    </tbody>
</table>