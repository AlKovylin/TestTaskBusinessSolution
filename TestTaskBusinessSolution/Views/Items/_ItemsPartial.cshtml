@model List<ItemViewModel>;

<div class="text-center">
    <div class="row justify-content-center">
        <table class="table table-striped table-hover">
            <tr class="table-primary">
                <th style="display:none"></th>
                <th>Наименование</th>
                <th class="col-2">Количество</th>
                <th class="col-1">Ед.изм.</th>
                <th class="col-2">Действие</th>
            </tr>
        </table>
        <table id="tblItems" class="table table-striped table-hover">
            @if (Model.Count > 0)
            {
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td class="ItemId" style="display:none">
                            <span>@Model[i].Id</span>
                        </td>
                        <td class="Name">
                            <span>@Model[i].Name</span>
                            <input type="text" value="@Model[i].Name" style="display:none" class="col-10 text-center" />
                        </td>
                        <td class="Quantity col-2">
                            <span>@Model[i].Quantity</span>
                            <input type="text" value="@Model[i].Quantity" style="display:none" class="col-7 text-center" />
                        </td>
                        <td class="Unit col-1">
                            <span>@Model[i].Unit</span>
                            <input type="text" value="@Model[i].Unit" style="display:none" class="col-5 text-center" />
                        </td>
                        <td class="col-2">
                            <a class="Edit" href="javascript:;">Edit</a>
                            <a class="Update" href="javascript:;" style="display:none">Update</a>
                            <a class="Cancel" href="javascript:;" style="display:none">Cancel</a>
                            <a class="Delete" href="javascript:;">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td class="ItemId" style="display:none">
                        <span></span>
                    </td>
                    <td class="Name">
                        <span></span>
                        <input type="text" value="" style="display:none" class="col-10 text-center" />
                    </td>
                    <td class="Quantity col-2">
                        <span></span>
                        <input type="text" value="" style="display:none" class="col-7 text-center" />
                    </td>
                    <td class="Unit col-1">
                        <span></span>
                        <input type="text" value="" style="display:none" class="col-5 text-center" />
                    </td>
                    <td class="col-2">
                        <a class="Edit" href="javascript:;" style="display:none">Edit</a>
                        <a class="Update" href="javascript:;" style="display:none">Update</a>
                        <a class="Cancel" href="javascript:;" style="display:none">Cancel</a>
                        <a class="Delete" href="javascript:;" style="display:none">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
